<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewGoal" >
  
  <fragment
      android:id="@+id/new_goal_fragment"
      android:name="net.liveandletlearn.opengoaltracker.NewGoalFragment"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      tools:layout="@layout/fragment_new_goal" />

  <fragment
      android:id="@+id/list"
      android:name="net.liveandletlearn.opengoaltracker.GoalListFragment"
      android:layout_width="match_parent"
      android:layout_weight="2"
      android:layout_height="300dp"
      tools:layout="@android:layout/list_content" />

</LinearLayout>